<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>管理員面板</h2>
        <a href="/logout" class="btn btn-outline-danger">登出</a>
    </div>

    <div class="row">
        <!-- Users Table -->
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">使用者列表</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>使用者名稱</th>
                                    <th>連結</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user) { %>
                                    <tr>
                                        <td><%= user.id %></td>
                                        <td><%= user.username %></td>
                                        <td>
                                            <code><%= user.link %></code>
                                            <button class="btn btn-sm btn-outline-primary ms-2" onclick="copyLink('<%= user.link %>')">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" onclick="deleteUser('<%= user.id %>')">
                                                <i class="fas fa-trash"></i> 刪除
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Messages Table -->
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">訊息列表</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>收件者</th>
                                    <th>內容</th>
                                    <th>時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% messages.forEach(function(message) { %>
                                    <tr>
                                        <td><%= getUserName(message.recipient_id) %></td>
                                        <td><%= message.content %></td>
                                        <td><small><%= new Date(message.timestamp).toLocaleString('zh-TW') %></small></td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" onclick="deleteMessage('<%= message.id %>')">
                                                <i class="fas fa-trash"></i> 刪除
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function copyLink(link) {
    const url = `${window.location.origin}/l/${link}`;
    navigator.clipboard.writeText(url).then(() => {
        alert('連結已複製！');
    });
}

function deleteUser(userId) {
    if (confirm('確定要刪除此使用者嗎？相關訊息也會被刪除。')) {
        fetch(`/api/admin/users/${userId}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('刪除失敗');
            }
        });
    }
}

function deleteMessage(messageId) {
    if (confirm('確定要刪除此訊息嗎？')) {
        fetch(`/api/admin/messages/${messageId}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('刪除失敗');
            }
        });
    }
}
</script> 